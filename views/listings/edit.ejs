<% layout("/layouts/boilerplate") %>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-6">
            <div class="card p-4 shadow-sm new-listing-card">
                <h3 class="mb-4 fw-bold text-center" style="color:#4B0082;">
                    <i class="fa-solid fa-pen-to-square"></i> Edit Listing
                </h3>
                <form method="POST" action="/listings/<%= listing._id %>" class="needs-validation" novalidate>
                    <!-- CSRF token should be INSIDE the form -->
                    <input type="hidden" name="_csrf" value="<%= _csrf %>">
                    <div class="mb-3">
                        <input name="title" class="form-control input-purple" placeholder="Enter title" type="text" value="<%= listing.title %>" required />
                        <div class="invalid-feedback">
                            Title is required.
                        </div>
                    </div>
                    <div class="mb-3">
                        <textarea name="description" class="form-control input-purple" placeholder="Enter description" rows="3" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">
                            Description is required.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="image" class="form-control input-purple" placeholder="Enter image URL/Link" type="text" value="<%= listing.image.url %>" />
                        <div class="invalid-feedback">
                            Please provide a valid image URL.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="price" class="form-control input-purple" placeholder="Enter price" type="number" min="0" value="<%= listing.price %>" required />
                        <div class="invalid-feedback">
                            Price is required and must be a positive number.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="country" class="form-control input-purple" placeholder="Enter country" type="text" value="<%= listing.country %>" required />
                        <div class="invalid-feedback">
                            Country is required.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="location" class="form-control input-purple" placeholder="Enter location" type="text" value="<%= listing.location %>" />
                        <div class="invalid-feedback">
                            Please enter a location.
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-purple fw-bold">
                            <i class="fa-solid fa-floppy-disk"></i> Update Listing
                        </button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <a href="/listings/<%= listing._id %>" class="btn btn-link" style="color:#4B0082;">
                        <i class="fa-solid fa-arrow-left"></i> Back to Listing
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
