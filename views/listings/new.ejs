<% layout("/layouts/boilerplate") %>
<input type="hidden" name="_csrf" value="<%= _csrf %>">
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-6">
            <div class="card p-4 shadow-sm new-listing-card">
                <h3 class="mb-4 fw-bold text-center" style="color:#4B0082;">Create New Listing</h3>
                <form method="POST" action="/listings" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <input name="title" class="form-control input-purple" placeholder="Enter title" type="text" required />
                        <div class="invalid-feedback">
                            Title is required.
                        </div>
                    </div>
                    <div class="mb-3">
                        <textarea name="description" class="form-control input-purple" placeholder="Enter description" rows="3" required></textarea>
                        <div class="invalid-feedback">
                            Description is required.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="image" class="form-control input-purple" placeholder="Enter image URL/Link" type="text" />
                        <div class="invalid-feedback">
                            Please provide a valid image URL.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="price" class="form-control input-purple" placeholder="Enter price" type="number" min="0" required/>
                        <div class="invalid-feedback">
                            Price is required and must be a positive number.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="country" class="form-control input-purple" placeholder="Enter country" type="text" required/>
                        <div class="invalid-feedback">
                            Country is required.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input name="location" class="form-control input-purple" placeholder="Enter location" type="text" />
                        <div class="invalid-feedback">
                            Please enter a location.
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-purple fw-bold">
                            <i class="fa-solid fa-plus"></i> Create Listing
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<form action="/listings" method="POST" enctype="multipart/form-data">
  <!-- other fields -->
  <input type="file" name="image" accept="image/*" class="form-control mb-3">
  <button type="submit" class="btn btn-primary">Create Listing</button>
</form>

