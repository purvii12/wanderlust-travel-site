<% layout("/layouts/boilerplate") %>
<% if (success && success.length) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>
<% if (error && error.length) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<div class="container my-4">
    <h3 class="mb-4 fw-bold text-center" style="color:#4B0082;">All Listings</h3>
    <div class="row g-4">
        <% for(let listing of allListings) { %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card listing-card shadow-sm h-100">
                    <div class="listing-img-wrapper">
                        <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.pexels.com/photos/417074/pexels-photo-417074.jpeg' %>" class="card-img-top" alt="<%= listing.title %> image">
                        <button class="fav-btn"><i class="fa-regular fa-heart"></i></button>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title mb-1" style="color:#4B0082;"><%= listing.title %></h5>
                        <% if (listing.location) { %>
                            <div class="listing-location mb-1 text-muted"><i class="fa-solid fa-location-dot"></i> <%= listing.location %></div>
                        <% } %>
                        <% if (listing.country) { %>
                            <div class="listing-country mb-2"><%= listing.country %></div>
                        <% } %>
                        <div class="listing-price fw-bold" style="color:#4ba750;">
                            â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A' %> <span class="fs-6 fw-normal text-muted">/night</span>
                        </div>
                        <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary mt-2" style="border-color:#4B0082; color:#8480d5;">View Details</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <a href="/listings/new" class="btn btn-primary" style="background:#4B0082; border:none;">
            <i class="fa-solid fa-plus"></i> Create New Listing
        </a>
    </div>
</div>
